@model WebsiteBlogCMS.Data.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage1.cshtml";
    var defaultOption = "-- Choose an Option --";
    var maxLengthOfContent = 5000;
}

<!-- single post -->
<section class="text-11 py-5">
    <div class="text11 py-lg-5 py-md-4">
        <div class="container">
            <div class="blog-title px-md-5">
                <h3 class="title-big">
                    Create Post
                </h3>
                <ul class="blog-list">
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text11-content">
                        <div class="col-lg-12 form-inner-cont">
                            <form action="Create" method="post" id="myForm" class="signin-form">
                                <div class="form-group">
                                    <label for="title">Title:</label>
                                    <input type="text" name="title" id="title"
                                           placeholder="Enter post title *"
                                           required="true" />
                                </div>
                                <div class="form-group">
                                    <label for="category">Choose category:</label>
                                    <select id="category" name="category" class="custom-select">
                                        <option value="default">@defaultOption</option>
                                        <option value="option1">Option 1</option>
                                        <option value="option2">Option 2</option>
                                        <option value="option3">Option 3</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="postTags">Choose tags:</label>
                                    <p>TODO DROPDOWNLIST</p>
                                </div>
                                <label for="imageLabel">Image:</label>
                                <div class="form-group custom-file">
                                    <label for="image" class="custom-file-label">Choose a file</label>
                                    <input type="file" name="image" id="image"
                                           class="custom-file-input" accept="image/*">
                                </div>
                                <div class="form-group mt-3">
                                    <label for="content">Content (maximum @maxLengthOfContent characters):</label>
                                    <textarea type="message" name="content" id="content"
                                              placeholder="Enter content of the post *"
                                              required="true" maxlength="@maxLengthOfContent"></textarea>
                                </div>
                                <div class="text-right">
                                    <button class="btn btn-style btn-primary" onclick="validateSelection()">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //single post -->

<script>
    function validateSelection() {
        var selectedCategory = document.getElementById("category").value;

        if (selectedCategory === "default") {
            alert("Please choose a category option before submitting.");
            event.preventDefault();
        }
        else {
            // Proceed with form submission or other actions
            document.getElementById("myForm").submit();
        }
    }
</script>