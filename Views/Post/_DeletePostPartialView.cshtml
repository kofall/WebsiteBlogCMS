@model WebsiteBlogCMS.Data.Post

<div class="modal fade" id="DeletePost-@Model.id" aria-labelledby="DeletePostLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeletePostLabel">Czy jesteś pewien, że chcesz usunąć ten post?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        Tytuł
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.title)
                    </dd>

                    <dt class="col-sm-4">
                        Utworzono
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.createdAt)
                    </dd>

                    @if (Model.updatedAt != null)
                    {
                        <dt class="col-sm-4">
                            Zaktualizowano
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.updatedAt)
                        </dd>
                    }

                    <dt class="col-sm-4">
                        Status
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.published)
                        {
                            @Html.Display("Niepubliczny")
                        }
                        else
                        {
                            @Html.Display("Publiczny")
                        }
                    </dd>

                    </dd>

                    <dt class="col-sm-4">
                        Opublikowano
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.publishedAt)
                    </dd>
                </dl>
                @using (Html.BeginForm("Delete", "Post", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                        <button type="submit" value="Delete" class="btn btn-primary">Delete</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>