@model WebsiteBlogCMS.Data.Tag

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutPage1.cshtml";
    var maxLengthOfDescription = 200;
}

@section customStyles {
    <link href="~/css/style-liberty.css" rel="stylesheet" />
}

<!-- single tag -->
<section class="text-11 py-5">
    <div class="text11 py-lg-5 py-md-4">
        <div class="container">
            <div class="blog-title px-md-5">
                <h3 class="title-big">
                    Edit Tag
                </h3>
                <ul class="blog-list">
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text11-content">
                        <div class="col-lg-12 form-inner-cont">
                            <form action="Create" method="post" id="myForm" class="signin-form">
                                <div class="form-group">
                                    <label for="title">Title:</label>
                                    <input type="text" name="title" id="title"
                                           placeholder="Enter tag title *"
                                           required="true" />
                                </div>
                                <div class="text-right">
                                    <button class="btn btn-style btn-primary" onclick="validateSelection()">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
<!-- //single tag -->