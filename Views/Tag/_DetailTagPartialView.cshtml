@model WebsiteBlogCMS.Models.Validation.TagModel

<div class="modal fade" id="DetailTag-@Model.Id" aria-labelledby="DetailTagLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailTagLabel">Szczegóły tagu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        Nazwa
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
