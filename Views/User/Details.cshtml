@model WebsiteBlogCMS.Data.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!-- single user -->
<section class="text-11 py-5">
    <div class="text11 py-lg-5 py-md-4">
        <div class="container">
            <div class="blog-title px-md-5">
                <h3 class="title-big">
                    Profile
                </h3>
                <ul class="blog-list">
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text11-content">
                        <div class="author-detalis">
                            <dev class="author-image" >
                                <img src="~/images/a2.jpg"
                                     alt="author image" class="img-fluid">
                            </dev>
                            <div class="author-info align-self-end">
                                <h4 class="mt-sm-3">Isabella</h4>
                                <ul class="blog-meta">
                                    <li>
                                        <span class="meta-value">
                                            Last active: 2 hours ago
                                        </span>
                                    </li>
                                    <li>
                                        <span class="meta-value">
                                            Email: <a href="">sample@gmail.com</a>
                                        </span>
                                    </li>
                                    <li>
                                        <span class="meta-value">
                                            Role: Administrator
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <h4 class="mt-sm-3">About me</h4>
                        <p class="mt-4 mb-3">
                            Nam eget tortor eu turpis ultrices lobortis. Vestibulum viverra ex sit amet accumsan tincidunt. Nulla pellentesque luctus diam et suscipit. Cras ultricies, quam a ultricies congue, nisi mi eleifend diam, eget facilisis nisi sapien eu metus. In hac habitasse platea dictumst. Interdum et malesuada fames ac ante ipsum primis in faucibus. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            Aliquam nec maximus nulla. Donec quis enim lacinia enim lobortis feugiat. Nam pellentesque molestie elit sed euismod. Aliquam vel faucibus orci. Ut vitae tincidunt ex, vel sodales nibh. Phasellus ac fringilla tellus, ut vestibulum ante. Quisque turpis odio, convallis malesuada est vitae, pretium placerat justo. Nullam sed tincidunt sapien. Fusce congue velit nunc, vel varius nisi ultrices nec. Fusce imperdiet molestie molestie. Quisque non felis sed nisl accumsan tincidunt.
                        </p>


                        @Html.ActionLink("Edit", "Edit", "User", new { id = 0 }, new { @class = "btn btn-style btn-primary mt-4" })
                        @Html.ActionLink("Delete", "Delete", "User", new { id = 0 }, new { @class = "btn btn-style btn-primary mt-4" })
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="blog-title px-md-5">
                <ul class="blog-list">
                </ul>
                <h3 class="aside-title">
                    Author's posts(COUNT)
                </h3>
            </div>
        </div>
        <div class="container pt-md-4 pb-md-5">
            <div class="row">
                <div class="col-lg-6">
                    <div class="bg-clr-white hover-box">
                        <div class="row">
                            <div class="col-sm-5 position-relative">
                                <a href="@Url.Action("Details", "Post", new { id = 0 })" class="image-mobile">
                                    <img class="card-img-bottom d-block radius-image-full" src="~/images/beauty7.jpg" alt="Card image cap">
                                </a>
                            </div>
                            <div class="col-sm-7 card-body blog-details align-self">
                                @Html.ActionLink("Why you need a Spa Day, Reasons to get a Package", "Details", "Post", new { id = 0 }, new { @class = "blog-desc" })
                                <div class="author align-items-center">
                                    <ul class="blog-meta">
                                        <li class="meta-item blog-lesson">
                                            <span class="meta-value"> July 13, 2020 </span>. <span class="meta-value ml-2"><span class="fa fa-clock-o"></span> 1 min</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //single user -->