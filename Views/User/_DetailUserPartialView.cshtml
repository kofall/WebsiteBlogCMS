@model WebsiteBlogCMS.Data.User

<div class="modal fade" id="DetailUser-@Model.id" aria-labelledby="DetailUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailUserLabel">Szczegóły użytkownika</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        Imię
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.firstName)
                    </dd>
                    <dt class="col-sm-4">
                        Nazwisko
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.lastName)
                    </dd>
                    <dt class="col-sm-4">
                        Login
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.login)
                    </dd>
                    <dt class="col-sm-4">
                        Rola
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Role.name)
                    </dd>
                    <dt class="col-sm-4">
                        Zarejestrowany
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.registeredAt)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
