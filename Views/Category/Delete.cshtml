@model WebsiteBlogCMS.Data.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


<!-- single category -->
<section class="text-11 py-5">
    <div class="text11 py-lg-5 py-md-4">
        <div class="container">
            <div class="blog-title px-md-5">
                <h3 class="title-big">
                    Delete Category
                </h3>
                <ul class="blog-list">
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text11-content">
                        <h2 class="mt-2">Are you sure you want to remove this category?</h2>

                        <h4 class="mt-sm-5">Title</h4>
                        <p class="mt-2">
                            Beauty
                        </p>
                        <h4 class="mt-sm-3">Parent category</h4>
                        <p class="mt-2">
                            Food
                        </p>
                        <h4 class="mt-sm-3">Icon</h4>
                        <img src="@Url.Content("~/images/icon.ico")" alt="Category Icon" />

                        <h4 class="mt-sm-3">Description</h4>
                        <p class="mt-2">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras bibendum dictum nisl, eu tempor sapien consequat eget. Pellentesque posuere nunc in nisl ullamcorper cursus. Etiam nec sem in massa ultricies luctus. Nunc ut nisi nulla. Aenean bibendum pharetra diam sed euismod. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae; Donec ac ligula quam. Nulla facilisi. Donec quis nibh risus. Maecenas sit amet porta lorem, eu ultrices ligula.
                        </p>

                        @Html.ActionLink("Yes", "Index", "Category", null, new { @class = "btn btn-style btn-primary mt-5" })
                        @Html.ActionLink("No", "Details", "Category", new { id = 0 }, new { @class = "btn btn-style btn-primary mt-5" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //single category -->