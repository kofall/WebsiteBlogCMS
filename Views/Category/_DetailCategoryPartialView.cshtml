@model WebsiteBlogCMS.Models.Validation.CategoryModel

<div class="modal fade" id="DetailCategory-@Model.Id" aria-labelledby="DetailCategoryLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailCategoryLabel">Szczegóły kategorii</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-5">
                        Nazwa
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-5">
                        Kategoria nadrzędna
                    </dt>
                    <dd class="col-sm-7">
                        @if (Model.ParentId == null)
                        {
                            @:Brak
                        }
                        else
                        {
                            @WebsiteBlogCMS.Classes.DataHelper.CategoryUtils.GetCategory((int)Model.ParentId).title
                        }
                    </dd>
                    <dt class="col-sm-5">
                        Opis
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Content)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
