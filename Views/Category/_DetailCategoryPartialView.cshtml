@model WebsiteBlogCMS.Data.Category

<div class="modal fade" id="DetailCategory-@Model.id" aria-labelledby="DetailCategoryLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailCategoryLabel">Szczegóły kategorii</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        Nazwa
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.title)
                    </dd>
                    <dt class="col-sm-4">
                        Kategoria nadrzędna
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.parentId == null)
                        {
                            @Html.Display("Brak");
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.parentId)
                        }              </dd>
                    <dt class="col-sm-4">
                        Opis
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.content)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
