@model WebsiteBlogCMS.Data.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutPage1.cshtml";
    var defaultOption = "-- Choose an Option --";
    var maxLengthOfDescription = 200;
}

@section customStyles {
    <link href="~/css/style-liberty.css" rel="stylesheet" />
}

<!-- single category -->
<section class="text-11 py-5">
    <div class="text11 py-lg-5 py-md-4">
        <div class="container">
            <div class="blog-title px-md-5">
                <h3 class="title-big">
                    Edit Category
                </h3>
                <ul class="blog-list">
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text11-content">
                        <div class="col-lg-12 form-inner-cont">
                            <form action="Edit" method="post" id="myForm" class="signin-form">
                                <div class="form-group">
                                    <label for="title">Title:</label>
                                    <input type="text" name="title" id="title"
                                           placeholder="Enter category title *"
                                           required="true" />
                                </div>
                                <div class="form-group">
                                    <label for="subcategory">Choose parent category (optional):</label>
                                    <select id="subcategory" name="subcategory" class="custom-select">
                                        <option value="default">@defaultOption</option>
                                        <option value="option1">Option 1</option>
                                        <option value="option2">Option 2</option>
                                        <option value="option3">Option 3</option>
                                    </select>
                                </div>
                                <label for="iconLabel">Icon:</label>
                                <div class="form-group custom-file">
                                    <label for="icon" class="custom-file-label">Choose a file</label>
                                    <input type="file" name="icon" id="icon"
                                           class="custom-file-input" accept=".ico">
                                </div>
                                <div class="form-group mt-3">
                                    <label for="description">Description (maximum @maxLengthOfDescription characters):</label>
                                    <textarea type="message" name="description" id="description"
                                              placeholder="Enter description about the category *"
                                              required="true" maxlength="@maxLengthOfDescription"></textarea>
                                </div>
                                <div class="text-right">
                                    <button class="btn btn-style btn-primary" onclick="validateSelection()">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
<!-- //single category -->

<script>
    function validateSelection() {
        var selectedOption = document.getElementById("subcategory").value;
        if (selectedOption === "default") {
            alert("Please choose an option before submitting.");
            event.preventDefault();
        } else {
            // Proceed with form submission or other actions
            document.getElementById("myForm").submit();
        }
    }
</script>