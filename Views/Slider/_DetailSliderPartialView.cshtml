@model WebsiteBlogCMS.Data.Slider

<div class="modal fade" id="DetailSlider-@Model.id" aria-labelledby="DetailSliderLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailSliderLabel">Szczegóły Slajdu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        Tytuł
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.title)
                    </dd>

                    <dt class="col-sm-2">
                        Treść
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.description)
                    </dd>
                    @if (Model.image != null && Model.image.Length > 0)
                    {
                        <dt class="col-sm-2">
                            Zdjęcie
                        </dt>
                        <dd class="col-sm-10">
                            <img id="imagePreview" src="data:image/*;base64,@(Convert.ToBase64String(Model.image.ToArray()))" alt="Image" class="image-preview" />
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>