@model IEnumerable<WebsiteBlogCMS.Data.Post>

@{
    ViewBag.Title = "Posty";
    Layout = "~/Views/_AdminPanelLayoutPage.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Lista postów</h1>
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <span><i class="fas fa-table me-1"></i> Posty</span>
                <button type="button" class="btn btn-success" data-toggle="modal" onclick="loadPartialView('Create', 0)">
                    Create
                </button>
            </div>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            Autor
                        </th>
                        <th>
                            Tytuł
                        </th>

                        <th>
                            Data utworzenia
                        </th>
                        <th>
                            Widoczny
                        </th>
                        <th>
                            Data publikacji
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Autor
                        </th>
                        <th>
                            Tytuł
                        </th>

                        <th>
                            Data utworzenia
                        </th>
                        <th>
                            Widoczny
                        </th>
                        <th>
                            Data publikacji
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.login)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.createdAt)
                            </td>
                            <td class="text-center align-middle">
                                @if (item.published)
                                {
                                    <i class="bi bi-check-circle text-success" style="font-size: 1.5em;"></i> <!-- Check icon -->
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-danger" style="font-size: 1.5em;"></i> <!-- X icon -->
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.publishedAt)
                            </td>
                            <td>
                                <button type="button" class="btn btn-warning" data-toggle="modal" onclick="loadPartialView('Edit', @item.id)">
                                    Edit
                                </button>
                                <button type="button" class="btn btn-info" data-toggle="modal" onclick="loadPartialView('Detail', @item.id)">
                                    Detail
                                </button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" onclick="loadPartialView('Delete', @item.id)">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div id="myModal">
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    jQuery.noConflict(); // Use this only once

    function loadPartialView(operation, id) {
        var url = '@Url.Action("LoadPostPartialView", "Post")';

        jQuery.ajax({
            url: url,
            type: 'GET',
            data: { operation: operation, id: id },
            success: function (data) {
                $('#myModal').html(data);
                $('#' + operation + 'Post-' + id).modal('show');
            },
            error: function () {
                alert('Error loading partial view.');
            }
        });
    }
</script>