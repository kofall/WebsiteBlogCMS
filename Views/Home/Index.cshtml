@model WebsiteBlogCMS.Models.HomeContent
@using System.Text

@{
    Layout = "~/Views/_BlogLayoutPage.cshtml";
}

@{
    string TruncateHtml(string html, int length)
    {
        var doc = new HtmlAgilityPack.HtmlDocument();
        doc.LoadHtml(html);

        var stringBuilder = new StringBuilder();

        foreach (var node in doc.DocumentNode.ChildNodes)
        {
            stringBuilder.Append(node.OuterHtml);

            if (stringBuilder.Length >= length)
            {
                // Remove the last appended node to replace it with a version that includes "..."
                stringBuilder.Length -= node.OuterHtml.Length;

                // Append the last node with "..." inside the <p> tag
                stringBuilder.Append(node.Name.Equals("p", StringComparison.OrdinalIgnoreCase)
                    ? node.InnerHtml + "..."
                    : node.OuterHtml);

                break;
            }
        }

        return stringBuilder.ToString();
    }
}

