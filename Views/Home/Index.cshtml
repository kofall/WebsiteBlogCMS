<div class="w3l-homeblock2 py-5">
    <div class="container py-lg-5 py-md-4">
        <!-- block -->
        <div class="row">
            <div class="col-lg-8">
                <h3 class="section-title-left mb-4"> Editor's Pick </h3>
                <div class="row">
                    @foreach (var item in Model.EditorsPicks)
                    {
                        <div class="col-lg-6 col-md-6 item">
                            <div class="card">
                                <div class="card-header p-0 position-relative">
                                    <a href="@Url.Action("Details", "Post", new { id = item.id })">
                                        <img class="card-img-bottom d-block radius-image-full" src="~/images/image1.jpg" alt="Card image cap">
                                    </a>
                                </div>
                                <div class="card-body blog-details">
                                    @if (item.PostCategories != null && item.PostCategories.Any())
                                    {
                                        <div>
                                            @foreach (var category in item.PostCategories)
                                            {
                                                <span class="label-blue">@category.Category.title</span>
                                            }
                                        </div>
                                    }
                                    <a href="@Url.Action("Details", "Post", new { id = item.id })" class="blog-desc">
                                        @item.title
                                    </a>
                                    <p>
                                        @Html.Raw(TruncateHtml(item.content, 100))
                                    </p>
                                    <div class="author align-items-center mt-3 mb-1">
                                        <img src="~/images/a1.jpg" alt="" class="img-fluid rounded-circle" />
                                        <ul class="blog-meta">
                                            <li>
                                                <a href="author.html">@item.User.firstName @item.User.lastName</a>
                                            </li>
                                            <li class="meta-item blog-lesson">
                                                <span class="meta-value">@item.publishedAt</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
